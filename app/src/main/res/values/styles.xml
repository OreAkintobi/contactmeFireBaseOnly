<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/background</item>
    </style>

    <style name="ExecuteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:background">@drawable/add_button_normal</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/background</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="NormalText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="form_inputs" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColorHint">@color/main_text</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
